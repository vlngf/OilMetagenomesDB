{
    "project_name":                  {"description": "Название проекта, в формате ФимилияАвтораГод", 
                                      "example": "zilov2023", 
                                      "possible_values": "Уникальное для статьи",
                                      "type": "string", 
                                      "required": true},

    "publication_year":              {"description": "Год публикации, например 2023",
                                      "example": "2023",
                                      "possible_values": "-",
                                      "type": "integer",
                                      "required": true},

    "publication_doi":               {"description": "Дои статьи, не должен содержать http://", 
                                      "example": "10.1007/s00253-018-8766-2", 
                                      "possible_values": "Уникальное для статьи",
                                      "type": "string", 
                                      "required": true,
                                      "pattern": "^10.\\d{4,9}\\/[^,]+$"},

    "sample_name":                   {"description": "Какую айдишку использовало исследование для этого семлпа.  Берем из статьи!! Если в статье нет- берем из NCBI", 
                                      "example": "a1", 
                                      "possible_values": "-",
                                      "type": "string", 
                                      "required": true},

    "archive":                       {"description": "Архив в котором хранятся данные библиотеки", 
                                      "example": "sra", 
                                      "possible_values": "Прописано в enums",
                                      "type": "string", 
                                      "required": true,
                                      "$ref": "assets/enums/archive.json"},
          
    "archive_project":               {"description": "Код проекта со всеми данными по образцам (PRJ). В статье может указываться код набора экспериментов (SRP), код эксперимента (SRX), код sample (SRS). Через эти обозначеня в NCBI можно найти код проекта", 
                                      "example": "prjna604781, prjeb9855", 
                                      "possible_values": "Уникальное для статьи",
                                      "type": "string", 
                                      "required": true},

    "archive_accession":             {"description": "Код данных для sample, начинается SRS для SRA или ERS для ENA", 
                                      "example": "srs5536770", 
                                      "possible_values": "Уникально глобально",
                                      "type": "string", 
                                      "required": true},

    "library_name":                  {"description": "Лабораторное название секвенированной библиотеки", 
                                      "example": "16s5_samples_set", 
                                      "possible_values": "-",
                                      "type": "string", 
                                      "required": true},

    "strand_type":                   {"description": "Тип библиотеки, подготовленной для секвенирования. Должно указываться в инструкции kit для подготовки образца - ССЫЛКА",
                                      "example": "double",
                                      "possible_values": "Прописано в enums",
                                      "type": ["string", "null"],
                                      "required": true,
                                      "$ref": "assets/enums/strand_type.json"},

    "library_polymerase":            {"description": "Указывать полимеразы, которые были применены после индексации библиотеки - писать источник, если берем не из статьи! - может быть в amplification kit", 
                                      "example": "fastpfu polymerase", 
                                      "possible_values": "-",
                                      "type": ["string", "null"],
                                      "required": true},
                    
    "library_treatment":             {"description": "Тип обработки библиотеки для устранения повреждений. Указывается в стаьте", 
                                      "example": "user", 
                                      "possible_values": "Прописано в enums",
                                      "type": ["string", "null"],
                                      "required": true,
                                      "$ref": "assets/enums/library_treatment.json"},

    "library_concentration, нг/мкл": {"description": "Это количество копий qPCR на мкл экстракта данной библиотеки. Если библиотека, секвенировалась несколько раз, то можно дублировать значение для каждой библиотеки. Это нанограмм на микролитр или копия на микролитр", 
                                      "example": "41700000", 
                                      "possible_values": "-",
                                      "type": ["number", "null"],
                                      "required": true},                             

    "PCR_cycle_count":               {"description": "Количество циклов ПЦР", 
                                      "example": "25", 
                                      "possible_values": "-",
                                      "type": ["integer", "null"],
                                      "required": true},
                
    "instrument_model":              {"description": "Модель секвенатора. Указываются в статье", 
                                      "example": "illumina hiseq4000", 
                                      "possible_values": "Уникально глобально. Прописано в enums",
                                      "type": "string",
                                      "required": true,
                                      "$ref": "assets/enums/instrument_model.json"},

    "library_layout":                {"description": "Метод секвенирования (односторонний или двусторонний), можно понять по количеству FASTQ файлов (1 или 2 соответственно)", 
                                      "example": "paired", 
                                      "possible_values": "Прописано в enums",
                                      "type": "string",
                                      "required": true,
                                      "$ref": "assets/enums/library_layout.json"},

    "library_strategy":              {"description": "Стратегия исследование: ампликоны, полный метагеном, метатранскриптом, метаболом", 
                                      "example": "amplicon", 
                                      "possible_values": "Прописано в enums",
                                      "type": "string",
                                      "required": true,
                                      "$ref": "assets/enums/library_strategy.json"},

    "amplicon_variable_region":      {"description": "Вариабельные области гена 16S рРНК, которые используются для идентификации таксонов бактерий и архей. Указываются в статье", 
                                      "example": "v3-v4", 
                                      "possible_values": "-",
                                      "type": "string", 
                                      "required": true},
            
    "read_count":                    {"description": "Сколько прочтений в файлах FASTQ. Находит парсер", 
                                      "example": "215326", 
                                      "possible_values": "-",
                                      "type": "integer", 
                                      "required": true},

    "archive_data_accession":        {"description": "Результат эксперимента SRR", 
                                      "example": "srr7754480", 
                                      "possible_values": "Уникальное для архива",
                                      "type": "string", 
                                      "required": true},

    "download_links":                {"description": "Ссылка для скачивания каждого необработанного файла данных. Находит парсер", 
                                      "example": "https://sra-pub-run-odp.s3.amazonaws.com/sra/SRR7754480/SRR7754480", 
                                      "possible_values": "Уникальное для архива",
                                      "type": "string", 
                                      "required": true},
                
    "download_md5s":                 {"description": "Контрольные суммы MD5 соответствующих загружаемых файлов. Это позволяет вам проверять целостность данных загруженных файлов, сравнивая контрольную сумму вашего файла с контрольной суммой на сервере, с которого они были загружены. Находит парсер", 
                                      "example": "5f574505fa16b7ae01a46682f8f24c87", 
                                      "possible_values": "Уникальное для архива",
                                      "type": "string", 
                                      "required": true},

    "download_sizes":                {"description": "Размеры соответствующих загружаемых файлов в байтах. Это можно использовать для оценки места на жестком диске, которое будет использоваться после загрузки. Для парных чтений может быть разделенным точкой с запятой. Находит парсер", 
                                      "example": "71368888", 
                                      "possible_values": "Уникальное для архива",
                                      "type": "integer", 
                                      "required": true}
}